{
  "deployment": {
    "name": "fireapi-room-visualizer",
    "version": "1.0.0",
    "environment": "production",
    "domain": "fireapi.dev",
    "description": "Room Visualizer API with image upload for external developers"
  },
  "server": {
    "port": 3010,
    "host": "0.0.0.0",
    "cluster": true,
    "workers": "auto"
  },
  "api": {
    "baseUrl": "https://fireapi.dev",
    "version": "v1",
    "rateLimit": {
      "windowMs": 900000,
      "max": 100,
      "imageUploadMax": 15
    }
  },
  "cors": {
    "allowedOrigins": [
      "https://fireapi.dev",
      "https://www.fireapi.dev",
      "https://firebuild.ai",
      "https://www.firebuild.ai"
    ],
    "allowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS", "HEAD"],
    "allowedHeaders": [
      "Content-Type",
      "Authorization", 
      "X-API-Key",
      "X-Client-ID",
      "Accept",
      "Origin",
      "User-Agent",
      "Cache-Control"
    ],
    "publicApiAccess": true,
    "httpsOnly": true
  },
  "security": {
    "helmet": {
      "contentSecurityPolicy": {
        "directives": {
          "defaultSrc": ["'self'"],
          "styleSrc": ["'self'", "'unsafe-inline'"],
          "scriptSrc": ["'self'"],
          "imgSrc": ["'self'", "data:", "https:"],
          "connectSrc": ["'self'", "https://fireapi.dev"]
        }
      },
      "crossOriginEmbedderPolicy": false
    },
    "apiKeyRequired": true,
    "httpsRedirect": true
  },
  "fileUploads": {
    "maxSize": "10mb",
    "allowedFormats": ["image/jpeg", "image/png", "image/webp"],
    "tempDirectory": "/tmp/fireapi-uploads",
    "cleanupInterval": 3600000
  },
  "imageProcessing": {
    "maxDimensions": {
      "width": 2048,
      "height": 2048
    },
    "quality": 85,
    "format": "jpeg",
    "progressive": true
  },
  "database": {
    "type": "memory",
    "backup": {
      "enabled": true,
      "interval": 3600000,
      "location": "/data/fireapi-backup"
    }
  },
  "monitoring": {
    "healthCheck": "/api/health",
    "metrics": "/api/metrics",
    "logging": {
      "level": "info",
      "format": "json",
      "destination": "stdout"
    }
  },
  "cache": {
    "materials": {
      "ttl": 3600000,
      "maxSize": 100
    },
    "images": {
      "ttl": 1800000,
      "maxSize": 50
    }
  },
  "endpoints": {
    "roomVisualizer": {
      "/api/visualizer/upload-image": {
        "method": "POST",
        "rateLimit": 15,
        "authentication": "required",
        "fileUpload": true
      },
      "/api/visualizer/flooring": {
        "method": "POST", 
        "rateLimit": 30,
        "authentication": "required"
      },
      "/api/visualizer/paint": {
        "method": "POST",
        "rateLimit": 30,
        "authentication": "required"  
      },
      "/api/visualizer/backsplash": {
        "method": "POST",
        "rateLimit": 30,
        "authentication": "required"
      },
      "/api/visualizer/materials": {
        "method": "GET",
        "rateLimit": 100,
        "authentication": "required",
        "cache": true
      }
    }
  },
  "features": {
    "roomVisualization": {
      "enabled": true,
      "supportedMaterials": [
        "hardwood-oak",
        "marble-carrara", 
        "ceramic-tile",
        "laminate-wood",
        "luxury-vinyl",
        "subway-tile-white",
        "trusa-mosaics-glass",
        "natural-stone",
        "stainless-steel"
      ],
      "costEstimation": true,
      "aiSurfaceDetection": true
    },
    "imageUpload": {
      "enabled": true,
      "dragAndDrop": true,
      "multipleFiles": false,
      "previewGeneration": true
    },
    "materialCatalog": {
      "enabled": true,
      "categories": ["flooring", "backsplash", "paint"],
      "pricing": true,
      "thumbnails": true
    }
  },
  "integrations": {
    "sharp": {
      "enabled": true,
      "concurrency": 2
    },
    "multer": {
      "enabled": true,
      "destination": "/tmp/uploads"
    }
  },
  "documentation": {
    "swagger": "/api/docs",
    "examples": "/api/examples", 
    "status": "/api/status"
  }
}