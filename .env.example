# FireAPI.dev Environment Configuration
# Copy this to .env and update with your values

# Server Configuration
PORT=3000
NODE_ENV=production

# API Configuration
API_VERSION=1.0.0
MAX_REQUEST_SIZE=10mb
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true

# Security
API_SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=https://firebuild.ai,https://www.firebuild.ai

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_INTENSIVE_MAX=10

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ðŸ”’ SECURE COMPLIANCE API (Backend Only - Never expose these to frontend)
COMPLIANCE_API_URL=http://localhost:3007
COMPLIANCE_API_KEY=internal_compliance_key_secure_backend_only
COMPLIANCE_CACHE_TTL=86400

# Optional: External Integrations (for future features)
# OPENAI_API_KEY=your-openai-key-here
# WEATHER_API_KEY=your-weather-key-here
# MATERIAL_PRICING_API_KEY=your-material-pricing-key-here

# Database (for future persistent storage)
# DATABASE_URL=postgresql://username:password@hostname:port/database

# Monitoring (for production monitoring)
# SENTRY_DSN=your-sentry-dsn-here
# NEW_RELIC_LICENSE_KEY=your-newrelic-key-here