# üåê FireAPI.dev Production Environment Configuration
# Room Visualizer API - Public Access

# Environment
NODE_ENV=production
FIREAPI_ENVIRONMENT=production

# Server Configuration
PORT=3010
HOST=0.0.0.0
CLUSTER_WORKERS=auto

# Domain Configuration
FIREAPI_DOMAIN=fireapi.dev
API_BASE_URL=https://fireapi.dev
CORS_ORIGIN=https://fireapi.dev,https://www.fireapi.dev,https://firebuild.ai

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_IMAGE_UPLOAD_MAX=15

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/tmp/fireapi-uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Image Processing
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048
IMAGE_QUALITY=85
IMAGE_FORMAT=jpeg

# Security
HTTPS_ONLY=true
HELMET_ENABLED=true
API_KEY_REQUIRED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Cache Configuration  
CACHE_MATERIALS_TTL=3600000
CACHE_IMAGES_TTL=1800000

# Room Visualizer Features
ROOM_VISUALIZER_ENABLED=true
COST_ESTIMATION_ENABLED=true
AI_SURFACE_DETECTION_ENABLED=true

# Material Catalog
MATERIAL_CATALOG_ENABLED=true
MATERIAL_PRICING_ENABLED=true

# Demo Keys (for testing)
DEMO_API_KEY=fireapi_demo_a1b2c3d4e5f67890abcdef1234567890fedcba0987654321

# Health Check
HEALTH_CHECK_ENDPOINT=/api/health
METRICS_ENDPOINT=/api/metrics

# Documentation
DOCS_ENDPOINT=/api/docs
EXAMPLES_ENDPOINT=/api/examples

# Monitoring
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true

# Sharp.js Configuration
SHARP_CONCURRENCY=2
SHARP_CACHE_SIZE=50

# Public API Access
PUBLIC_API_ENABLED=true
EXTERNAL_DEVELOPER_ACCESS=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600000
BACKUP_LOCATION=/data/fireapi-backup